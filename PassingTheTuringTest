package cristinah.helloworld;

import java.util.Scanner;

public class PassingTheTuringTest {
    public static void main(String[] args) {
        Scanner inputReader = new Scanner(System.in);

        String yourName;
        String yourColour;
        String favoriteFruit;

        
        System.out.println("Hello There?? ");
        System.out.println("What is your name?? ");
        
        yourName = inputReader.nextLine();        

        System.out.println("Hi, " + yourName + "! I am Cristina");
        
        System.out.println("What is your favorite colour? ");
        yourColour = inputReader.nextLine();
        
       System.out.println("Huh, " + yourColour + "? Mine's Electric Lime."); 

        System.out.println("I really like limes. They're my favorite fruit, too.");
        System.out.println("What's YOUR favorite fruit, " + yourName + "?");
       favoriteFruit = inputReader.nextLine();

       
       System.out.println("Really? " + favoriteFruit + "? That's wild!");
       System.out.println("Speaking of favorites, what's your favorite number?");
       int favoriteNumber = Integer.parseInt(inputReader.nextLine());

       System.out.println(favoriteNumber + " is a cool number. Mine's -7.");
       
       int calculateResult = favoriteNumber * -7;
        System.out.println("Did you know " + favoriteNumber + " * -7 is " + calculateResult + "? That's a cool number too!");

        // Goodbye message
        System.out.println("Well, thanks for talking to me, " + yourName + "!");

/** desired output
  Hello There?? 
What is your name?? 
Ionela
Hi, Ionela! I am Cristina
What is your favorite colour? 
lime
Huh, lime? Mine's Electric Lime.
I really like limes. They're my favorite fruit, too.
What's YOUR favorite fruit, Ionela?
papaya
Really? papaya? That's wild!
Speaking of favorites, what's your favorite number?
10
10 is a cool number. Mine's -7.
Did you know 10 * -7 is -70? That's a cool number too!
Well, thanks for talking to me, Ionela!       
*/
    }
}
