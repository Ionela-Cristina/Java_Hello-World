package cristinah.helloworld;


public class InABucket {

    public static void main(String[] args) {

        // You can declare all KINDS of variables.
        String walrus;
        double piesEaten;
        float weightOfTeacupPig;
        int grainsOfSand;
        weightOfTeacupPig = 0.50f;//here I define the weight of the tea cup
        grainsOfSand = 100;//here I define theweight of the sand

        // But declaring them just sets up the space for data
        // to use the variable, you have to put data IN it first!
        walrus = "Sir Leroy Jenkins III";
        piesEaten = 42.1;
        System.out.println("Meet my pet walrus, " + walrus);
        System.out.print("He was a bit hungry today, and ate this many pies : ");
        System.out.println(piesEaten);
        System.out.print("My teacup pig weighs approximately: ");
        System.out.println(weightOfTeacupPig);
        System.out.print("I have collected this many grains of sand: ");
        System.out.println(grainsOfSand);
        
/**desired output
Meet my pet walrus, Sir Leroy Jenkins III
He was a bit hungry today, and ate this many pies : 42.1
My teacup pig weighs approximately: 0.5
I have collected this many grains of sand: 100*/      
    }

}
