package cristinah.helloworld;

import java.util.Scanner;

public class If_statement {

    public static void main(String[] args) {
        Scanner inputReader = new Scanner(System.in);

        System.out.println("Enter a day (1-7): ");
        int day = inputReader.nextInt();
        String dayName = "";

        if (day == 1) {
            dayName = "Monday";
        } else if (day == 2) {
            dayName = "Tuesday";
        } else if (day == 3) {
            dayName = "Wednesday";
        } else if (day == 4) {
            dayName = "Thursday";
        } else if (day == 5) {
            dayName = "Friday";
        } else if (day == 6) {
            dayName = "Saturday";
        } else if (day == 7) {
            dayName = "Sunday";
        } else {
            dayName = "This is an invalid day";
        }

        System.out.println(dayName);
        
/**desired output
If the user input the correct number between 1-7 then the name of the day will be the output.
* Example:
Enter a day (1-7): 
4
Thursday
 

If the user input a non valid number then the output will prompt invalid.
* Example:
Enter a day (1-7): 
8
This is an invalid day       
*/
    }
}
